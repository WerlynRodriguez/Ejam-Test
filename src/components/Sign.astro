---
interface Props {
    icon?: string;
    text: string;
}

const { icon, text } = Astro.props;
---

<span class="Sign">
    { icon && <img src={`/icon/${icon}.svg`} alt={icon} /> }
    { text }
</span>

<style>
    .Sign {
        display: inline-flex;
        place-items: center;
        gap: var(--space-2);

        padding: 0 0.5rem;
        font-size: 0.8rem;
        font-weight: 500;

        color: #fff;
    }
</style>